<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
     data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

    @await Html.PartialAsync("/Views/Common/Partial/Topbar Header.cshtml")

    @await Html.PartialAsync("/Views/Common/Partial/Left Sidebar.cshtml")

    <div class="page-wrapper">
        <table class="table">
            <tr>
                <th>Mã </th>
                <th>NV Duyệt</th>
                <th>NV Giao</th>
                <th>CMNDKH</th>
                <th>Thời Gian Giao</th>
                <th>Hóa Đơn</th>
                <th>Trạng Thái</th>        
                <th>  </th>

            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td><label>@item.MaGioHang</label></td>
                    <td><label>@item.NvDuyet</label></td>
                    <td><label>@item.NvGiao</label></td>
                    <td><label>@item.CMNDKH</label></td>
                    <td><label>@item.NgayGiao</label></td>
                    <td><label>@item.MaHoaDon</label></td>
                    <td><label>@item.TrangThai.TenTrangThai</label></td>
                    <td><a class="edit-btn" data-id="@item.MaGioHang">Lưu</a></td>

                </tr>
            }
        </table>
    </div>

    <footer class="footer text-center">
        2021 © Ample Admin brought to you by <a href="https://www.wrappixel.com/">wrappixel.com</a>
    </footer>
</div>


