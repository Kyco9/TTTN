@using BT2MWG.Helpers
@using BT2MWG.Models.ReportModel
@model List<Revenue>;
@{
    var tg = DateTime.Now;
    decimal tongTien = 0;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<page class="" size="A4">
    <div class="page-content container">
        <div class="page-header text-blue-d2">
            @*print section----------------------*@
            <div class="page-tools">
                <div class="action-buttons">
                    <a id="print" class="btn bg-white btn-light mx-1px text-95 print" data-title="Print">
                        <i class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i>
                        Print
                    </a>
                </div>
            </div>
            @*print section----------------------*@

        </div>

        <div id="printthis" class="container px-0">
            <div class="row mt-4">
                <div class="col-12 col-lg-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="text-center text-150">
                                <i class="fa fa-book fa-2x text-success-m2 mr-1"></i>
                                <span class="text-default-d3">Thống kê doanh thu từ @Model.FirstOrDefault().thang - @Model.FirstOrDefault().year đến @Model.Last().thang - @Model.Last().year </span>
                            </div>
                        </div>
                    </div>
                    <!-- .row -->

                    <hr class="row brc-default-l1 mx-n1 mb-4" />

                    <div class="row">
                        <div class="col-sm-6">
                            <div>
                                <span class="text-sm text-grey-m2 align-middle">Người lập hóa đơn:</span>
                                <span class="text-600 text-110 text-blue align-middle">Ngô Mạnh Cường</span>
                            </div>
                            <div class="text-grey-m2">
                                <div class="my-1">
                                    Ngày lập: @tg
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        @*table itemmmmmmmmmmmmmmmmmmmmmmm*@
                        <div class="table-responsive">
                            <table class="table table-striped table-borderless border-0 border-b-2 brc-default-l1">
                                <thead class="bg-none bgc-default-tp1">
                                    <tr class="text-white">
                                        <th>Tháng</th>
                                        <th>Năm</th>
                                        <th>Doanh thu</th>
                                    </tr>
                                </thead>


                                <tbody class="text-95 text-secondary-d3">
                                    @foreach (var item in Model)
                                    {
                                        string tien = item.revenue == 0 ? "0 đ" : item.revenue.ToVnd();
                                        <tr>
                                            <td>@item.thang</td>
                                            <td>@item.year</td>
                                            <td>@tien</td>
                                        </tr>
                                        tongTien = tongTien + item.revenue;
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*print section----------------------*@
                        <div class="row mt-3">
                            <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                                <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                    <div class="col-7 text-right">
                                        Tổng tiền
                                    </div>
                                    <div class="col-5">
                                        <span class="text-150 text-success-d3 opacity-2">@tongTien.ToVnd()</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</page>
<script>
    function printData() {
        var divToPrint = document.getElementById("printthis");
        newWin = window.open("");
        newWin.document.write(divToPrint);
        newWin.print();
        newWin.close();
    }

    $('#print').on('click', function () {
        printData();
    })
</script>

<script src="~/public/js/admin/order.js"></script>