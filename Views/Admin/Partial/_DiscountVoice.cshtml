@using BT2MWG.Models
@{
    db dbo = new db();
    var listDoChoi = dbo.layTatCaDoChoiV3();
}

<div class="add-km-item">
    <label>Tên đồ chơi KM: </label>
    <select id="toys">
        @foreach(var item in listDoChoi)
        {
            <option value="@item.MaDoChoi">@item.TenDoChoi</option>
        }
    </select>
    <span>
        &emsp;
        <label>Phần trăm giảm giá: </label>
        <input placeholder="Nhập phẩn trăm giảm giá" />
    </span>
</div>