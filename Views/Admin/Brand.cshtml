<body>

    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        @await Html.PartialAsync("/Views/Common/Partial/Topbar Header.cshtml")

        @await Html.PartialAsync("/Views/Common/Partial/Left Sidebar.cshtml")

        <div class="page-wrapper">
            <br />Thêm hãng đồ chơi
            <input class="add-brand" type="text"/>
            <a class="add-btn">Thêm</a>
            <br />
            <table class="table">
                <tr>
                    <th>Mã Hãng</th>
                    <th>Tên Hãng</th>
                    <th>  </th>
                    <th>  </th>
                </tr>
                @foreach (var item in @Model.listHang)
                {
                    <tr>
                        <td><label>@item.MAHANGDOCHOI</label></td>
                        <td><input id="@item.MAHANGDOCHOI" type="text" value="@item.TENHANGDOCHOI" /></td>
                        <td><a class="edit-btn" data-id="@item.MAHANGDOCHOI" >Lưu</a></td>
                        <td><a class="delete-btn" data-id="@item.MAHANGDOCHOI">Xóa</a></td>
                    </tr>
                }
            </table>
        </div>

        <footer class="footer text-center">
            2021 © Ample Admin brought to you by <a href="https://www.wrappixel.com/">wrappixel.com</a>
        </footer>
    </div>


    <script src="plugins/bower_components/jquery/dist/jquery.min.js"></script>
